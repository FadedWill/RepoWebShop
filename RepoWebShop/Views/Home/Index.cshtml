@model HomeViewModel

<link href="~/Content/Home/Index.css" rel="stylesheet" />
<link href="~/Content/animate.css" rel="stylesheet" />

<header class="intro-header" id="intro-header">
    <img class="img-responsive animated bounceInLeft" alt="La Reposteria Shop'" src="~/Pictures/logo.png" />
    <div class="container">
        <div class="intro-message">     
            <div class="row">
                <div class="col-lg-12 col-md-12 hidden-sm hidden-xs">
                    <hr class="intro-divider">
                    <h1>Bienvenido al sitio de la mejor pastelería artesanal de Buenos Aires</h1>
                </div>
                <div class="hidden-lg hidden-md col-sm-12 col-xs-12">
                    <h1>Repostería Artesanal</h1>
                </div>
            </div>
            @Html.Partial("ArrowDown", "#services");
        </div>
    </div>
</header>


@Html.Partial("~/Views/Services/Index.cshtml");


<section class="bg-light" id="piesoftheweek">
    <div class="container">
        <h1>Destacados</h1>
        <h1 class="hidden-sm hidden-xs text-muted">Nuestra selección semanal - Especial para vos!</h1>
        <div class="row">
            @foreach (var pie in Model.PiesOfTheWeek)
            {
                @Html.Partial("PieOverviewSummary", pie)
            }
        </div>
    </div>
</section>

