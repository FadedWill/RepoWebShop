@model HomeViewModel

<link href="~/Content/Home/Index.css" rel="stylesheet" />

<header class="intro-header" id="intro-header">
    <div class="parallax-window" data-parallax="scroll" data-image-src="/Pictures/index.jpg">
        <br />
        <img class="img-responsive animated bounceInLeft" alt="La Reposteria Shop'" src="~/Pictures/logo.png" />
        <div class="container">
            <div class="intro-message">
                <div class="row">
                    <hr class="intro-divider">
                    <h1 class="">Repostería Artesanal</h1>
                </div>
                <br />
                @Html.Partial("ArrowDown", "#services")
            </div>
        </div>
    </div>
</header>



@Html.Partial("~/Views/Services/Index.cshtml")


<section class="bg-light" id="piesoftheweek">
    <div class="container">
        <div class="title-container">
            <h1 class="title-logo"><a asp-action="List" asp-controller="PieDetail">Destacados</a></h1>
        </div>
        <div class="row pie-of-week-carousel">
            @foreach (var pie in Model.PiesOfTheWeek)
            {
                @Html.Partial("PieOverviewSummary", pie)
            }
        </div>
    </div>
</section>

<section id="location">
    <div class="container">
        <div class="title-container">
            <h1 class="text-center title-logo">Dirección</h1>
        </div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d40509.165163836115!2d-58.42386838681868!3d-34.620141749222064!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x36138e4afdfc67e8!2sDe+las+Artes!5e0!3m2!1sen!2snz!4v1503363586219" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
</section>

<section class="bg-light" id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="title-container">
                    <h1 class="section-heading title-logo">Equipo</h1>
                </div>
                <h2 class="section-subheading text-muted"></h2>
            </div>
        </div>
        <div class="owl-carousel team-carousel">
            @Html.Partial("TeamMember", new TeamMemberViewModel() { Name = "Claudio", Picture = "/Pictures/Team/Claudio.jpg", Title = "Maestro pastelero", Subtitle = "Cofundador", Email = "" })
            @Html.Partial("TeamMember", new TeamMemberViewModel() { Name = "Marcela", Picture = "/Pictures/Team/Marcela.jpg", Title = "Mente creativa", Subtitle = "Cofundadora", Email = "" })
            @Html.Partial("TeamMember", new TeamMemberViewModel() { Name = "Fiorella", Picture = "/Pictures/Team/Fio.jpeg", Title = "Master Chef", Subtitle = "Manager de Ventas", Email = "" })
            @Html.Partial("TeamMember", new TeamMemberViewModel() { Name = "Gaby", Picture = "/Pictures/Team/Tia.png", Title = "Master Chef", Subtitle = "Manos mágicas", Email = "" })
            @Html.Partial("TeamMember", new TeamMemberViewModel() { Name = "Nico", Picture = "/Pictures/Team/Nico.PNG", Title = "Master de Todo", Subtitle = "Genio culinario", Email = "" })
            @Html.Partial("TeamMember", new TeamMemberViewModel() { Name = "Alicia", Picture = "/Pictures/Team/ALita.PNG", Title = "La Jefa", Subtitle = "Atención al Cliente", Email = "" })
        </div>
        <div class="row">
            <div class="col-lg-12 mx-auto text-center">
                <blockquote><h1>El secreto esta en la pasión.</h1></blockquote>
            </div>
        </div>
    </div>
</section>

<section id="afip">
    <a href='http://qr.afip.gob.ar/?qr=-3Dafrs7S3zSZ4ok4IozMQ,,' target='_F960AFIPInfo'>
        <img src='http://www.afip.gob.ar/images/f960/DATAWEB.jpg' border='0'>
    </a>
</section>

<script type="text/javascript">
    $(function () {
        $('.carousel').carousel({
            interval: 2000
        });
    });

    $('.team-carousel').slick({
        arrows: true,
        dots: true,
        autoplay: true,
        autoplaySpeed: 2500,
        focusOnSelect: true,
        pauseOnFocus: true,
        pauseOnHover: true,
        pauseOnDotsHover: true,
        centerMode: true,
        variableWidth: true
    });
    
</script>
