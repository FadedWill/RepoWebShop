@model HomeViewModel

<link href="~/Content/Home/Index.css" rel="stylesheet" />

<header class="intro-header" id="intro-header">
    <img class="img-responsive animated bounceInLeft" alt="La Reposteria Shop'" src="~/Pictures/logo.png" />
    <div class="container">
        <div class="intro-message">     
            <div class="row">
                <hr class="intro-divider">
                <h1 class="">Repostería Artesanal</h1>
            </div>
            <br />
            @Html.Partial("ArrowDown", "#services")
        </div>
    </div>
</header>


@Html.Partial("~/Views/Services/Index.cshtml")


<section class="bg-light" id="piesoftheweek">
    <div class="container">
        <h1><a asp-action="List" asp-controller="PieDetail">Destacados</a></h1>
        <div class="row pie-of-week-carousel">
            @foreach (var pie in Model.PiesOfTheWeek)
            {
                @Html.Partial("PieOverviewSummary", pie)
            }
        </div>
    </div>
</section>

<section class="bg-light" id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="section-heading">Nuestro equipo</h1>
                <h2 class="section-subheading text-muted"></h2>
            </div>
        </div>
        <div class="owl-carousel team-carousel">
            @Html.Partial("TeamMember", new TeamMemberViewModel() { Name = "Claudio", Picture = "/Pictures/Team/Claudio.jpg", Title = "Maestro pastelero", Subtitle = "Cofundador", Email = "" })
