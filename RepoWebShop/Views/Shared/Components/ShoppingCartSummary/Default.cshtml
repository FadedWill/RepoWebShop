@model ShoppingCartViewModel


@if (Model.CountTrolleyObjects > 0)
{
    <li>
        <a asp-controller="ShoppingCart" asp-action="Index">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.CountTrolleyObjects
            </span>
        </a>
    </li>
}