@model Pie


<div class='addToCart' style="margin: auto;">
    <h4><strong>@Model.Name - $@Model.Price</strong></h4>
    <p class='button'>
        <a class='btn btn-repo btn-primary' asp-controller='ShoppingCart' asp-action='AddToShoppingCart' asp-route-pieId='@Model.PieId'>
            Comprar <span class='glyphicon glyphicon-shopping-cart'></span>
        </a>
    </p>
    <p> <strong>@Model.SizeDescription</strong></p>
</div>
