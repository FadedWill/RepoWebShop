@model ResetPasswordNewPasswordViewModel

<style>
    section#emailContainer {
        text-align: center;
        max-width: 350px;
        margin: 10px auto;
    }

    table {
        width: 100%;
    }
    tr {
        padding: 5px;
    }
</style>
<br />
<section class="container" id="emailContainer">

    <h2>Reestablecer contraseña</h2>
    <br />
    <form asp-controller="Account" asp-action="ResetNewPassword" method="post" role="form">
        <input asp-for="Hash" class="hidden" />
        <input asp-for="UserId" class="hidden" />
        <table>
            <tr>
                <td>
                    <label asp-for="Password1" class="control-label"></label>
                </td>
                <td>
                    <input asp-for="Password1" class="form-control" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Password2" class="control-label"></label>
                </td>
                <td>
                    <input asp-for="Password2" class="form-control" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <hr>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center;">
                    <input type="submit" class="btn btn-primary" value="Confirmar" />
                </td>
            </tr>
        </table>
    </form>
</section>
