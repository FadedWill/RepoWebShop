@model PieDetailViewModel

<link href="~/Content/PieDetail/PieDetails.css" rel="stylesheet" />

<div class="container">
    <div class="thumbnailDetail">
        <div class="header">
            <h1>@Model.PieDetail.Name</h1>
        </div>
        <div class="row short-Desc">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4" id="pictures">
                <div id="photos"></div>
                <img alt="@Model.PieDetail.Name" src="~/Pictures/imgnotfound.png" id="defaultPicture" style="display:none; width: 100%;">
                <div class="caption-full">
                    @Html.Partial("PiePriceCarousel", Model)
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8" id="description">
                <h3>@Model.PieDetail.ShortDescription</h3>
                <br />
                <p class="longdesc">@Model.PieDetail.LongDescription</p>
                <h3><strong>Preparación: @Model.PieDetail.PreparationTime hs</strong></h3>
                <table class="table static-prices animated flipInX">
                    <thead>
                        <tr>
                            <th scope="col">Tamaño</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Precio</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var pie in Model.Pies)
                            {
                                <tr class="static-price">
                                    <td class="unit-name">@pie.Name</td>
                                    <td class="unit-description">@pie.SizeDescription</td>
                                    <td class="unit-price">@pie.Price</td>
                                    <td class='button'>
                                        <a asp-controller='ShoppingCart' asp-action='AddToShoppingCart' asp-route-pieId='@pie.PieId'>
                                            Comprar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div style="text-align: center;">
                    <a asp-action="List" asp-controller="PieDetail" class="btn btn-primary submit-btn">
                        Ver más
                    </a>
                </div>
            </div>
        </div>
    </div>  
</div>
<script type="text/javascript">
    $(function () {
        $('.carousel').carousel({
            interval: 2000
        });
    });

    $.get("/api/PhotosData/GetAlbum/@Model.PieDetail.FlickrAlbumId", function (data) {
        $("#photos").append(data);
    }).fail(function () {
        $('#defaultPicture').show();
    });
</script>