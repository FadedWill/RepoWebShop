@model PieDetailViewModel

<style>
        .static-prices {
        margin: 5px;
    }

    .table thead tr th {
        text-align: center;
    }


    .header h1 {
        text-align: center;
        margin-bottom: -20px;
        margin-top: -20px;
    }


    .thumbnailDetail {
        padding: 10px;
        max-width: 900px;
        margin: 10px auto;
        border-radius: 20px;
    }

        .thumbnailDetail h1 {
        }

    #pictures {
        background-color: #dbe9d8;
        border-radius: 3px;
        border-style: solid;
        border-color: grey;
        border-width: 2px;
    }

        #pictures h2 {
            padding: 5px;
            background-color: white;
            border-radius: 3px;
            border-style: solid;
            border-width: 1px;
            border-color: green;
        }

    .longdesc {
        font-size: larger;
    }

    .short-Desc {
        padding: 20px;
        max-width: 900px;
        margin: 30px auto;
        text-align: center;
    }

    h2 {
        font-family: 'Playball'
    }



    img.main {
        width: 100%;
    }

    @@media screen and (max-width: 400px) {
        img.nav {
            /*width: 40px;*/
            padding: 5px;
        }
    }

    @@media screen and (max-width: 600px) {
        img.nav {
            /*width: 60px;*/
            padding: 5px;
        }
    }

    @@media screen and (min-width: 600px) {
        img.nav {
            /*width: 80px;*/
            padding: 10px;
        }
    }

    div.row p {
        padding-right: 10px;
        padding-left: 10px;
    }

    .thumbnailDetail .caption-full {
        padding: 9px;
        color: #333;
    }

        #description h4 {
            text-align: center;
        }
    /***************************************/

</style>

@section metatags {
    <meta property="og:url" content="@Model.RequestAbsoluteUrl" />
    <meta property="og:type" content="product" />
    <meta property="og:title" content="@Model.PieDetail.Name" />
    <meta property="og:description" content="@Model.PieDetail.LongDescription" />
    @{
        if (Model.PieDetail.FlickrAlbumId != 0 && !String.IsNullOrWhiteSpace(Model.PrimaryPicture))
        {
            var fb_img = Model.PrimaryPicture + "z.jpg";
            <meta property="og:image" content="@fb_img" />
        }
    }
}

<div id="fb-root"></div>
<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/es_ES/sdk.js#xfbml=1&version=v2.11&appId=744831982380043';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
</script>

<div class="container">
    <br />
    <div class="thumbnailDetail">
        <div class="header" id="title">
            <div class="title-container">
                <h1 class="title-logo">@Model.PieDetail.Name</h1>
            </div>
        </div>

        <div class="short-Desc">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4" id="pictures">
                <div id="photos"></div>
                <img alt="@Model.PieDetail.Name" src="~/Pictures/imgnotfound.png" id="defaultPicture" style="display:none; width: 100%;">
                <div class="caption-full">
                    @Html.Partial("PiePriceCarousel", Model)
                    <div class="fb-share-button"
                         data-href="/PieDetail/Details/@Model.PieDetail.PieDetailId"
                         data-layout="button_count">
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8" id="description">
                <h3>@Model.PieDetail.ShortDescription</h3>
                <br />
                <p class="longdesc">@Model.PieDetail.LongDescription</p>
                <h3 class="alert alert-success">Preparación: @Model.PieDetail.PreparationTime hs</h3>
                <table class="table static-prices animated flipInX">
                    <thead>
                        <tr>
                            <th scope="col">Descripción</th>
                            <th scope="col">Tamaño</th>
                            <th scope="col">Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var pie in Model.Pies)
                            {
                                <tr class="static-price">
                                    <td class="unit-name">@pie.Name</td>
                                    <td class="unit-description">@pie.SizeDescription</td>
                                    <td class="unit-price">
                                        $@pie.Price
                                        <a asp-controller='ShoppingCart' asp-action='AddToShoppingCart' asp-route-pieId='@pie.PieId'>
                                            Comprar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div style="text-align: center;">
                    <a asp-action="List" asp-controller="PieDetail" class="btn btn-primary submit-btn">
                        Ver más
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('.carousel').carousel({
            interval: 2000
        });
    });

    $.get("/api/PhotosData/GetAlbum/@Model.PieDetail.FlickrAlbumId", function (data) {
        $("#photos").append(data);
    }).fail(function () {
        $('#defaultPicture').show();
    });
</script>