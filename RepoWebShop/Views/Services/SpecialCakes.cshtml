@model IEnumerable<AlbumPictures>

<style>
    /************************/
    .special-cakes {
        margin-top: -25px;
    }

        .special-cakes .slick-arrow::before {
            color: #6f6f6f;
        }

        .special-cakes ul {
            list-style-type: none;
        }

        .special-cakes h2, h1 {
            text-align: center;
        }


        .special-cakes .grid {
            padding: 10px;
            padding-right: 15px;
        }

        .special-cakes .row {
            display: -webkit-flex;
            display: -ms-flexbox;
            display: flex;
            -webkit-flex-wrap: wrap;
            -ms-flex-wrap: wrap;
            flex-wrap: wrap;
        }

        .special-cakes .step {
            background-color: #e9f7cb8c;
            margin: 5px;
            padding: 10px;
            border-radius: 2px;
            width: 100%;
            font-family: 'Kalam';
        }

            .special-cakes .step h3 {
                margin-top: 5px;
                padding: 4px;
                text-align: center;
                background-color: #60ad76;
                color: white;
                font-family: 'Playball';
                -moz-box-shadow: 0px 0px 4px rgba(0,0,0,0.55);
                -khtml-box-shadow: 0px 0px 4px rgba(0,0,0,0.55);
                -webkit-box-shadow: 0px 0px 4px rgba(0,0,0,0.55);
            }


            .special-cakes .step p {
                margin: 1px;
                padding: 1px;
                padding-left: 2px;
                text-align: center;
            }

        .special-cakes .row div.step:hover,
        .special-cakes .row div.step:focus {
            -webkit-transform: scale(1.05);
            transform: scale(1.05);
            background-color: #ecf7dc;
        }

        .special-cakes .row div.step {
            -webkit-transition: -webkit-transform 0.3s ease, border-color 0.3s ease;
            transition: transform 0.3s ease, border-color 0.3s ease
        }

    #allAlbums h2 {
        display: none;
    }


    .contact-mail {
        font-family: 'Kalam';
        text-align: center;
    }

</style>
<br />
<div class="container">
    <div class="special-cakes">
        <div class="title-container">
            <h1 class="title-logo">Armá tu torta</h1>
        </div>
        <div class="grid" id="localPage">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Tamaño</h3>
                        <p>De 1 kg a 1.5 kg [Redonda]</p>
                        <p>De 2 kg a 5 kg. [Rectangular]</p>
                        <p class="text-muted">Se estima que medio kg es suficiente para 5 personas. El tamaño mínimo es 1 kg.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Bisquit</h3>
                        <p>Chocolate / Vainilla</p>
                        <p>Semi Galesa + chocolate</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Relleno</h3>
                        <p>Dulce de leche, Crema, Chocolate, Nutella, Frutos del bosque, Frutos secos, crema de distintos sabores (limón, frutilla, dulce) Etc.</p>
                        <p class="text-muted">Hasta 2 rellenos por torta.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Cobertura</h3>
                        <p>Merengue italiano, Mouse de chocolate, Choco blanco, Choco negro, Pasta de azúcar</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Terminación</h3>
                        <p>Cerezas, Frutillas, Confites, Copetes, Flores de azúcar, Etc.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Escribir Dedicacion</h3>
                        <p>
                            ¡Feliz Cumple Tomi!
                        </p>
                    </div>
                </div>
            </div>
            <div class="contact-mail">
                <h3>¿Te gustan? Escribinos a <a href="mailto:info@delasartes.com.ar">info@delasartes.com.ar</a></h3>
            </div>
            <div class="" id="allAlbums">
            </div>
        </div>
    </div>
</div>

<script>
    @{
        var albumes = new List<long>()
        {
            72157663338249098,
            72157631388046352,
            72157689990349894
        };
        foreach(var item in albumes)
        {
            <text>
                $.get("/api/PhotosData/GetAlbum/@item", function (data) {
                    $("#allAlbums").append(data);
                });
            </text>
        }
    }
    $('.special-cakes').appendTo('.content');
    $('.step').matchHeight();
    $('.special-cakes').removeClass('hide');
    $('.special-cakes').show();
    $('a[data-toggle="list"]').on('shown.bs.tab', function (e) {
        e.target // newly activated tab
        e.relatedTarget // previous active tab
    })
</script>


