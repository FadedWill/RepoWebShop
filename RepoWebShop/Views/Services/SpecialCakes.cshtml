@model IEnumerable<AlbumPictures>

<link href="~/Content/Services/SpecialCakes.css" rel="stylesheet" />

<div class="container">
    <div class="special-cakes">
        <h2>Armá tu torta</h2>

        <div class="grid" id="localPage">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Tamaño</h3>
                        <p>De 1 kg a 1.5 kg [Redonda]</p>
                        <p>De 2 kg a 5 kg. [Rectangular]</p>
                        <p class="text-muted">Se estima que medio kg es suficiente para 5 personas. El tamaño mínimo es 1 kg.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Bisquit</h3>
                        <p>Chocolate / Vainilla</p>
                        <p>Semi Galesa [Pasta de azucar negra, con nueces] + chocolate</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Relleno</h3>
                        <p>Dulce de leche, Crema, Chocolate, Nutella, Frutos del bosque, Frutos secos, crema de distintos sabores (limón, frutilla, dulce) Etc.</p>
                        <p class="text-muted">Hasta 2 rellenos por torta.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Cobertura</h3>
                        <p>Merengue italiano, Mouse de chocolate, Choco blanco, Choco negro, Pasta de azúcar</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Elegir Terminacion</h3>
                        <p>Cerezas, Frutillas, Confites, Copetes, Flores de azúcar, Etc.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="step">
                        <h3>Escribir Dedicacion</h3>
                        <p>
                            ¡Feliz Cumple Tomi!
                        </p>
                    </div>
                </div>
            </div>
            <div class="" id="allAlbums">
            </div>
            <div class="contact-mail">
                <h3>¿Te gustan? Escribinos a <a href="mailto:info@lareposteria.com.ar">info@lareposteria.com.ar</a></h3>
            </div>
        </div>
    </div>
</div>

<script>
    @{
        var albumes = new List<long>()
        {
            72157663338249098,
            72157631388046352,
            72157689990349894
        };
        foreach(var item in albumes)
        {
            <text>
                $.get("/api/PhotosData/GetAlbum/@item", function (data) {
                    $("#allAlbums").append(data);
                });
            </text>
        }
    }
    $('.special-cakes').appendTo('.content');
    $('.step').matchHeight();
    $('.special-cakes').removeClass('hide');
    $('.special-cakes').show();
    $('a[data-toggle="list"]').on('shown.bs.tab', function (e) {
        e.target // newly activated tab
        e.relatedTarget // previous active tab
    })
</script>
