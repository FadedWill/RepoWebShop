@model AddSpecialDateViewModel

<link href="~/Content/Calendar/AddPublicHoliday.css" rel="stylesheet" />

<div class="container add-public-holiday">
    <h2>Agregar feriado</h2>
    <form asp-controller="Calendar" asp-action="AddPublicHoliday" method="post" class="form-horizontal" role="form">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OpenHoursStartingAt" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OpenHoursStartingAt" class="form-control" />
                <span asp-validation-for="OpenHoursStartingAt" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OpenHoursFinishingAt" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OpenHoursFinishingAt" class="form-control timepicker" />
                <span asp-validation-for="OpenHoursFinishingAt" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ProcessingHoursStartingAt" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProcessingHoursStartingAt" class="form-control timepicker" />
                <span asp-validation-for="ProcessingHoursStartingAt" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ProcessingHoursFinishingAt" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProcessingHoursFinishingAt" class="form-control timepicker" />
                <span asp-validation-for="ProcessingHoursFinishingAt" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        </div>
    </form>
</div>