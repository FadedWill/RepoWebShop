@model Vacation

<div class="container">
    <h2>Agregar vacaciones planificadas</h2>
    <form asp-controller="Calendar" asp-action="AddVacations" method="post" class="form-horizontal" role="form">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group" hidden="hidden">
            <label asp-for="VacationId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="VacationId" class="form-control" />
                <span asp-validation-for="VacationId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" >
            <label asp-for="StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StartDate" class="form-control"/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" >
            <label asp-for="EndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        </div>
    </form>
</div>