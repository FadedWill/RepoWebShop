@model ShoppingCartViewModel

@section styles {
    <link href="~/Content/ShoppingCart/Index.css" rel="stylesheet" />
}

<br />

<div class="header" id="title">
    <div class="title-container">
        <h1 class="title-logo">Carrito</h1>
    </div>
</div>
<div class="text-center text-muted" style="margin-top:-20px; margin-bottom: 20px;">
    <h3>Horarios de envío</h3>
    <h4 class="">Entre 10:30 y 12:30 o entre 18:00 y 20:00</h4>
</div>

@if (Model.ShoppingCartTotal == 0)
{
    <div class="container">
        <h3>Parece que tu carrito de compras está vacío. </h3>
        <h3>¿Qué tal un paseo por nuestras productos? <a asp-controller="PieDetail" asp-action="List">Ver productos</a></h3>
    </div>
}
else
{
    <div class="container">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th class="text-center">Cantidad</th>
                    <th>Producto</th>
                    <th class="text-right">Precio</th>
                    <th class="text-right">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.Items)
                {
                    <tr>
                        <td class="text-center">
                            <a asp-controller="ShoppingCart" asp-action="ClearFromShoppingCart"
                               asp-route-pieId="@line.Pie.PieId">
                                <span class="glyphicon glyphicon-remove remove-item"></span>
                            </a>
                        </td>
                        <td class="text-center quantity">
                            <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart"
                               asp-route-pieId="@line.Pie.PieId">
                                <span class="fa fa-caret-left"></span>
                            </a>
                            @line.Amount
                            <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                               asp-route-pieId="@line.Pie.PieId">
                                <span class="fa fa-caret-right"></span>
                            </a>
                        </td>
                        <td class="text-left">
                            <a href="/PieDetail/Details/@line.Pie.PieDetailId">
                                @line.Pie.PieDetail.Name [@line.Pie.Name] - @Model.PreparationTime hs
                            </a>
                        </td>
                        <td class="text-right">@line.Pie.Price.ToString("c")</td>
                        <td class="text-right">
                            @((line.Amount * line.Pie.Price).ToString("c"))
                        </td>
                    </tr>
                }
                @if (Model.ShoppingCartTotal >= Model.MinArsForDelivery && Model.DeliveryAddress != null)
                {
                    <tr>
                        <td class="text-center">
                            <a asp-controller="ShoppingCart" asp-action="RemoveDelivery">
                                <span class="glyphicon glyphicon-remove remove-item"></span>
                            </a>
                        </td>
                        <td class="text-center quantity"></td>
                        <td class="text-left">
                            <a asp-action="Index" asp-controller="Delivery" title="@Model.DeliveryAddress.DeliveryInstructions">
                                Delivery: @Model.DeliveryAddress.AddressLine1
                            </a>
                        </td>
                        <td class="text-right">
                            @Model.DeliveryAddress.DeliveryCost.ToString("c")
                        </td>
                        <td class="text-right">
                            @Model.DeliveryAddress.DeliveryCost.ToString("c")
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right">
                        <strong>
                            Total:
                        </strong>
                    </td>
                    <td class="text-right">
                        <strong>
                            @Model.ShoppingCartTotal.ToString("c")
                        </strong>
                    </td>
            </tfoot>
        </table>



        @if (Model.DeliveryAddress == null && Model.ShoppingCartTotal < Model.MinArsForDelivery)
        {
            <div class="animated bounceInUp text-center">
                <p style="font-size: 20px;" class="text-muted">Si tu orden es de @Model.MinArsForDelivery.ToString("c") o más, podés agregar delivery.</p>
                @if (Model.ShoppingCartTotal >= Model.MinArsForDelivery)
                {
                    <h2>
                        <a asp-action="Index" asp-controller="DeliveryAddress">Agregar</a>
                    </h2>
                }
            </div>
        }

        @if (Model.DeliveryAddress == null && Model.ShoppingCartTotal >= Model.MinArsForDelivery)
        {
            <div class="animated bounceInUp text-center">
                @if (Model.ShoppingCartTotal >= Model.MinArsForDelivery)
                {
                    <h2>
                        <a class="btn btn-primary" asp-action="Index" asp-controller="Delivery">Agregar envío</a>
                    </h2>
                }
                <p style="font-size: 15px;">Si estás dentro de los 3 kms, podemos enviarte el pedido con un cargo adicional.</p>
            </div>
        }

        <br />
        <div class="col-md-2 col-lg-2 col-sm-3">

            <div class="text-center">
                <label class="" style="">Orden lista</label>
                <div id="pickupDate" class="text-center">
                    @Html.Partial("~/Views/Shared/PickupDate.cshtml", Model.PickupDate)
                </div>
                <div>
                    <label class="control-label ">¿Por qué? <a id="moreinfo" href="#estimation-time"><span class="fa fa-question-circle"></span></a></label>
                </div>
                <div>
                    <label class="control-label "><a style="color:black;" asp-action="OpenHours" asp-controller="Calendar">Ver Horarios</a></label>
                </div>
            </div>

        </div>

        <div class="col-md-10 col-lg-10 col-sm-9">
            <div style="margin-left: 7px;margin-right: 7px;">
                <label class="control-label">Comentarios</label>
                <textarea maxlength="250" id="comments" placeholder="Quisiera agregar 'Feliz Cumple Mati!', gracias :)" class="form-control" rows="4"></textarea>
            </div>
        </div>
        <br />

    </div>
    <br />
    <div class="container center-block">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="reserva payment-section animated flipInX">
                <table id="second-payment">
                    <tbody>
                        <tr>
                            <td class="desc-td-payment1">
                                <p class="">No es necesario que tengas un usuario con nosotros.</p>
                                <p class="">Elegí el medio de pago que más te convenga.</p>
                                <p class="">Te mandamos un email cuando la orden está lista.</p>
                            </td>
                            <td class="image-td-payment1">
                                <img src="https://imgmp.mlstatic.com/org-img/banners/ar/medios/online/125X125.jpg" title="MercadoPago - Medios de pago" alt="MercadoPago - Medios de pago" width="125" height="125" />
                                <a id="mercadolink" href="#" name="MP-Checkout" mp-mode="redirect" style="display:none;"
                                   class="blue-L-Rn-Ar">
                                    Pagar
                                </a>
                                <img src="~/Pictures/Loader.gif" id="mpLoader" />

                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                @if (Model.User == null)
                                {
                                    <div class="alert alert-info" style="margin-left: 30px; margin-right: 30px;">
                                        <p>¿Querés recibir un SMS cuando la orden esté lista? <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="/ShoppingCart">Click aquí</a></p>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-success" style="margin-left: 30px; margin-right: 30px;">
                                        @if (!Model.User.PhoneNumberConfirmed)
                                        {
                                            <p>@Model.User.FirstName, ¿Querés recibir SMS cuando terminemos? </p>
                                            <a asp-action="VerifyNumber" asp-controller="Account" asp-route-actionName="Index" asp-route-controllerName="ShoppingCart">Agregar celular</a>
                                        }
                                        else
                                        {
                                            <p>@Model.User.FirstName, te vamos a avisar cuando la orden está lista al siguiente número +@Model.User.PhoneNumber</p>
                                            <a asp-action="VerifyNumber" asp-controller="Account" asp-route-actionName="Index" asp-route-controllerName="ShoppingCart">Cambiar</a>
                                        }
                                    </div>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="mp-payment payment-section">
                <table id="first-payment">
                    <tbody>
                        <tr>
                            <td class="image-td-payment2">

                                <img class="" src="~/Pictures/logo.png" width="125">
                            </td>
                            <td class="desc-td-payment2">
                                <p class="">Pagalo cuando lo recibís.</p>
                                <p class="">Deberás disponer de una cuenta con nosotros.</p>
                                <p class="">Te mandamos un SMS cuando la orden está lista.</p>
                                <p class="">Válido solamente para compras de hasta @Model.MaxArsForReservation.ToString("c")</p>
                                @if (Model.ShoppingCartTotal <= Model.MaxArsForReservation)
                                {
                                    <a class="btn btn-primary submit-btn" asp-controller="Order" asp-action="Checkout">Reservar</a>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="container" id="estimation-time" style="font-size: larger;">
        <h3>Orden lista</h3>
        <div class="">
            La fecha y hora te dice cuándo tu pedido va a estar listo para ser retirado.<br />
            La hora estimada es calculada teniendo en cuenta el tiempo de preparación, y nuestros horarios de producción y atención al público. <br />
            También tenemos en cuenta feriados, fechas especiales y vacaciones.<br />
            Así que quedate tranquilo, que la fecha que calculamos es 100% precisa.<br />
            Todos nuestros productos son frescos, y así nos aseguramos que vas a recibir tu pedido en tiempo y forma.
        </div>

        <h3>¿Cuáles son los horarios de atención?</h3>
        <div class="">
            Los horarios de atención están publicados <a href="/Calendar/OpenHours">aquí</a>. <br />
            Antes de pasar por nuestro local, asegurate de saber nuestros horarios de atención.
        </div>

        <h3>¿Querés retirar tu compra en otra fecha?</h3>
        <div class="">
            No hay ningun problema, siempre y cuando la fecha sea posterior a la calculada por el sistema. <br />
            En el campo 'Comentarios', escribinos cuándo lo querés retirar. <br />
        </div>

        <h3>¿Querés retirar tu compra antes?</h3>
        <div class="">
            En ese caso, tendrías que comunicarte con nosotros para ver si lo podemos hacer. <br />
            Vamos a hacer todo lo posible por finalizar tus productos lo antes posible. <br />
            A veces, simplemente no podremos. <br />
        </div>
    </div>
}

<script type="text/javascript">
    $.ajax({
        type: 'GET',
        url: 'api/ShoppingCartData/GetComments/',
        dataType: 'json',
        success: function (data) {
            if (data.comments != 'undefined')
                $('#comments').append(data.comments);
            else
                $('#comments').append('');
        }
    });
    $("a").on('click', function () {
        $.ajax({
            type: 'GET',
            url: 'api/ShoppingCartData/AddComments/' + $('#comments').val()
        });
    });

    var myVar = setInterval(getEstimate, 60000);

    function getEstimate(){
        $.get('api/CalendarData/GetPickupDate/@Model.PreparationTime', function (data) {

            $('#pickupDate').empty();
            $('#pickupDate').append(data);
        });
    }

    $(function () {
        $('a#moreinfo[href *=\\#]:not([href =\\#])').click(function () {
            if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') && location.hostname == this.hostname) {
                var target = $(this.hash);
                target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                if (target.length) {
                    $('html,body').animate({
                        scrollTop: target.offset().top - 65
                    }, 1000);
                    return false;
                }
            }
        });
    });

    $.get('/api/ShoppingCartData/GetMercadoPagoLink/', function (data) {
        console.log(data)
        $('a#mercadolink').attr('href', data.link.result);
        $.getScript("https://www.mercadopago.com/org-img/jsapi/mptools/buttons/render.js", function () {
            $('#mpLoader').hide();
            $('#mercadolink').show();
        });
    });

</script>



