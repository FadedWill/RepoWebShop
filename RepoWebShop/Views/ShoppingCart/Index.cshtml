@model ShoppingCartViewModel

<link href="~/Content/ShoppingCart/Index.css" rel="stylesheet" />

<div class="container">
    <h1>Tu carrito de compras</h1>
</div>
@if (Model.ShoppingCartTotal == 0)
{
    <div class="container">
        <h3>Parece que tu carrito de compras está vacío. </h3>
        <h3>¿Qué tal un paseo por nuestras productos? <a asp-controller="PieDetail" asp-action="List" >Ver productos</a></h3>
</div>
}
else
{
    <div class="container">
        <h3>Tu pedido requiere @Model.PreparationTime hs para ser procedado.</h3>
        <h3>Pagá o reservá ahora y pasa a buscar tu orden el @Model.PickupDate.ToString("dd-MM-yyyy") a las @Model.PickupDate.TimeOfDay.ToString("hh\\:mm").</h3>
        <div class="alert alert-info">
            <p>La hora estimada es calculada teniendo en cuenta el tiempo de preparación, y nuestros horarios de producción y de atención al público, considerando feriados, y fechas especiales. Todos nuestros productos son frescos, y queremos asegurarnos de que recibas tu pedido en tiempo y forma.</p>
        </div>
        
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th class="text-center">Cantidad</th>
                    <th>Producto</th>
                    <th class="text-right">Precio</th>
                    <th class="text-right">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="text-center">
                            <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart"
                               asp-route-pieId="@line.Pie.PieId">
                                <span class="glyphicon glyphicon-remove remove-item"></span>
                            </a>
                        </td>
                        <td class="text-center">@line.Amount</td>
                        <td class="text-left">@line.Pie.PieDetail.Name @line.Pie.Name</td>
                        <td class="text-right">@line.Pie.Price.ToString("c")</td>
                        <td class="text-right">
                            @((line.Amount * line.Pie.Price).ToString("c"))
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right">
                        <strong>
                            Total:
                        </strong>
                    </td>
                    <td class="text-right">
                        <strong>
                            @Model.ShoppingCartTotal.ToString("c")
                        </strong>
                    </td>
                </tr>
            </tfoot>
        </table>
        <div class="form-group" >
            <label class="col-md-12 control-label">Comentarios</label>
            <div class="col-md-12">
                <textarea maxlength="250" id="comments" placeholder="Quisiera agregar 'Feliz Cumple Mati!', gracias :)" class="form-control" rows="4"></textarea>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="container-fluid">
            <div class="row" >
                <div class="col-lg-6 col-md-6">
                    <div class="payment-item">
                        <table align="center">
                            <tr>
                                <td>
                                    <img class="img-responsive" alt="Mercado Pago'" src="~/Pictures/mercadopago_logo.png" width="125" height="125" style="display:inline-block">
                                    <img src="https://imgmp.mlstatic.com/org-img/banners/ar/medios/online/125X125.jpg" title="MercadoPago - Medios de pago" alt="MercadoPago - Medios de pago" width="125" height="125" />
                                    @*<img class="img-responsive" alt="Mercado Pago'" src="~/Pictures/mercadopago.png">*@
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a id="mercadolink" href="@Model.Mercadolink" name="MP-Checkout"
                                       class="btn btn-primary submit-btn">
                                        Pagar Ahora
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p class="text-muted">No es necesario que tengas un usuario con nosotros.</p>
                                    <p class="text-muted">Elegí el medio de pago que mas te convenga.</p>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="payment-item">
                        <table align="center">
                            <tr>
                                <td>
                                    <img class="img-responsive" alt="Mercado Pago'" src="~/Pictures/logo.png">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a class="btn btn-primary submit-btn" asp-controller="Order" asp-action="Checkout">Reservar</a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p class="text-muted">Pagalo cuando lo retirás.</p>
                                    <p class="text-muted">Deberás disponer de una cuenta con nosotros.</p>
                                </td>
                            </tr>
                        </table>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $.ajax({
        type: 'GET',
        url: 'api/ShoppingCartData/GetComments/',
        dataType: 'json',
        success: function (data) {
            if (data.comments != 'undefined')
                $('#comments').append(data.comments);
            else
                $('#comments').append('');
        }
    });
    $("a").on('click', function () {
        $.ajax({
            type: 'GET',
            url: 'api/ShoppingCartData/AddComments/' + $('#comments').val()
        });
    });
</script>
<script type="text/javascript" src="https://www.mercadopago.com/org-img/jsapi/mptools/buttons/render.js"></script>


