@model ShoppingCartViewModel
<div class="container">
    <h2>Tu carrito de compras</h2>
</div>
@if (Model.ShoppingCartTotal == 0)
{
    <div class="container">
        <h3>Parece que tu carrito de compras está vacío. </h3>
        <h3>¿Qué tal un paseo por nuestras productos? <a asp-controller="PieDetail" asp-action="List" >Ver productos</a></h3>
</div>
}
else
{
    <div class="container">
        <h3>Tu pedido va a estar listo en @Model.PreparationTime hs una vez acreditado el pago</h3>
        <h4>Todas las órdenes son procesadas en nuestros horarios de atención</h4>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th class="text-center">Cantidad</th>
                    <th>Producto</th>
                    <th class="text-right">Precio</th>
                    <th class="text-right">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="text-center">
                            <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart"
                               asp-route-pieId="@line.Pie.PieId">
                                <span class="glyphicon glyphicon-remove" style="color:darkred;"></span>
                            </a>
                        </td>
                        <td class="text-center">@line.Amount</td>
                        <td class="text-left">@line.Pie.Name</td>
                        <td class="text-right">@line.Pie.Price.ToString("c")</td>
                        <td class="text-right">
                            @((line.Amount * line.Pie.Price).ToString("c"))
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right" style="vertical-align:middle">
                        <strong>
                            Total:
                        </strong>
                    </td>
                    <td class="text-right" style="vertical-align:middle">
                        <strong>
                            @Model.ShoppingCartTotal.ToString("c")
                        </strong>
                    </td>
                </tr>
            </tfoot>
        </table>
        <div class="form-group" >
            <label class="col-md-12 control-label">Comentarios</label>
            <div class="col-md-12">
                <textarea id="comments" placeholder="Quisiera agregar 'Feliz Cumple Mati!', gracias :)" class="form-control" rows="4" style="resize: vertical;"></textarea>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="container-fluid">
            <div class="row" >
                <div class="col-lg-6 col-md-6">
                    <div class="payment-item">
                        <table style="text-align:center" align="center">
                            <tr>
                                <td>
                                    <img class="img-responsive" style="margin: 0px auto;" alt="Mercado Pago'" src="~/Pictures/mercadopagologo.png">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a style="margin:30px;" id="mercadolink" href="@Model.Mercadolink" name="MP-Checkout"
                                       class="btn btn-primary" onreturn="payment">Pagar Ahora</a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p class="text-muted">No es necesario que tengas un usuario en nuestro sitio.</p>
                                    <p class="text-muted">Elegí el medio de pago que mas te convenga.</p>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="payment-item">
                        <table style="text-align:center" align="center">
                            <tr>
                                <td>
                                    <img class="img-responsive" style="margin: 0px auto;" alt="Mercado Pago'" src="~/Pictures/logo.png">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a style="margin:30px;" class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Reservar</a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p class="text-muted">Pagalo cuando lo retirás.</p>
                                    <p class="text-muted">Deberás disponer de una cuenta con nosotros.</p>
                                </td>
                            </tr>
                        </table>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $.ajax({
        type: 'GET',
        url: 'api/ShoppingCartData/GetComments/',
        dataType: 'json',
        success: function (data) {
            $('#comments').append(data.comments);
        },
        error: function () { console.log('err'); }
    });
    function payment(json) {
        console.log(json);
        $.ajax({
            type: 'GET',
            url: 'api/PaymentData/Process/' + json.collection_status,
            dataType: 'json',
            success: function (data) {
                window.location.assign('Order/Status/' + '@Model.BookingId');
            }
        });
        return false;
    }
    $("a").on('click', function () {
        $.ajax({
            type: 'GET',
            url: 'api/ShoppingCartData/AddComments/' + $('#comments').val()
        });
    });

    $("#mercadolink").on('click', function () {
        $.ajax({
            type: 'GET',
            url: 'api/PaymentData/SaveDraft/' + '@Model.BookingId'
        });
    });
</script>
<script type="text/javascript" src="https://www.mercadopago.com/org-img/jsapi/mptools/buttons/render.js"></script>


