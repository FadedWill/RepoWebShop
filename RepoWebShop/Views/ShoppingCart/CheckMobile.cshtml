@model ShoppingCartViewModel

<div id="sms-container" class="">
    <div style="display:flex; ">
        <div style="margin:auto;">

        @if (Model.User == null)
        {
            <div class="alert alert-info animated" style="margin-left: 30px; margin-right: 30px;">
                <p>¿Querés recibir un SMS cuando la orden esté lista? <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="/ShoppingCart">Click aquí</a></p>
            </div>
        }
        else
        {
            <div class="alert alert-success animated" style="margin-left: 30px; margin-right: 30px;">
                @if (!Model.User.PhoneNumberConfirmed)
                {
                    <p>@Model.User.FirstName, para recibir SMS cuando terminemos tu pedido por favor, <a asp-action="VerifyNumber" asp-controller="Account" asp-route-actionName="Index" asp-route-controllerName="ShoppingCart">ingresa tu número aquí.</a></p>
                }
                else
                {
                    <p>@Model.User.FirstName, te vamos a avisar cuando la orden está lista al siguiente número +@Model.User.PhoneNumber</p>
                    <a asp-action="VerifyNumber" asp-controller="Account" asp-route-actionName="Index" asp-route-controllerName="ShoppingCart">Cambiar</a>
                }
            </div>
        }
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        setInterval(function () {
            setTimeout(function () {
                $('.alert').addClass('flash');
            }, 2000);
            setTimeout(function () {
                $('.alert').removeClass('flash');
            }, 1000);
        }, 5000)
    });
</script>