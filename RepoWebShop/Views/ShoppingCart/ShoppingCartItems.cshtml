@model ShoppingCartViewModel

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th></th>
            <th class="text-center">Cantidad</th>
            <th>Producto</th>
            <th class="text-right">Precio</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Items)
        {
            <tr>
                <td class="text-center">
                    <a asp-controller="ShoppingCart" asp-action="ClearFromShoppingCart"
                       asp-route-pieId="@line.Pie.PieId">
                        <span class="glyphicon glyphicon-remove remove-item"></span>
                    </a>
                </td>
                <td class="text-center quantity">
                    <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart"
                       asp-route-pieId="@line.Pie.PieId">
                        <span class="fa fa-caret-left"></span>
                    </a>
                    @line.Amount
                    <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                       asp-route-pieId="@line.Pie.PieId">
                        <span class="fa fa-caret-right"></span>
                    </a>
                </td>
                <td class="text-left">
                    <a href="/PieDetail/Details/@line.Pie.PieDetailId">
                        @line.Pie.PieDetail.Name [@line.Pie.Name] - @Model.PreparationTime hs
                    </a>
                </td>
                <td class="text-right">@line.Pie.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Amount * line.Pie.Price).ToString("c"))
                </td>
            </tr>
        }
        @if (Model.ShoppingCartTotal >= Model.MinArsForDelivery && Model.DeliveryAddress != null)
        {
            <tr>
                <td class="text-center">
                    <a asp-controller="ShoppingCart" asp-action="RemoveDelivery">
                        <span class="glyphicon glyphicon-remove remove-item"></span>
                    </a>
                </td>
                <td class="text-center quantity"></td>
                <td class="text-left">
                    <a asp-action="Index" asp-controller="Delivery" title="@Model.DeliveryAddress.DeliveryInstructions">
                        Delivery: @Model.DeliveryAddress.AddressLine1
                    </a>
                </td>
                <td class="text-right">
                    @Model.DeliveryAddress.DeliveryCost.ToString("c")
                </td>
                <td class="text-right">
                    @Model.DeliveryAddress.DeliveryCost.ToString("c")
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">
                <strong>
                    Total:
                </strong>
            </td>
            <td class="text-right">
                <strong>
                    @Model.ShoppingCartTotal.ToString("c")
                </strong>
            </td>
        </tr>
        <tr>
            <td colspan="3"></td>
            <td colspan="2" style="text-align: right;">
                <a class="btn btn-primary" href="#checkout" id="tocheckout"> <span class="fa fa-arrow-down"></span> Finalizar compra</a>
            </td>
        </tr>
    </tfoot>
</table>