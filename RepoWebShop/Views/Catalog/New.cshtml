@model Product
@inject IPieDetailRepository pieDetail

<div class="container">
    <h2>Producto Nuevo en Catálogo SIN foto</h2>

    <form asp-controller="Catalog" asp-action="New" method="post" class="form-horizontal" role="form">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group" hidden="hidden">
            <label asp-for="ProductId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" hidden="hidden">
            <label asp-for="IsActive" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" maxlength="50" placeholder="" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PriceInStore" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PriceInStore" class="form-control" />
                <span asp-validation-for="PriceInStore" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @*<input asp-for="Category" class="form-control" placeholder="Lunch / Seco / Postre" />*@
                <select asp-for="Category" class="form-control">
                    <option>Lunch</option>
                    <option>Postre</option>
                    <option>Seco</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Temperature" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Temperature" class="form-control">
                    <option>Frío</option>
                    <option>Caliente</option>
                </select>
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MinOrderAmount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MinOrderAmount" class="form-control" />
                <span asp-validation-for="MinOrderAmount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Portions" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Portions" class="form-control" />
                <span asp-validation-for="Portions" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PreparationTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PreparationTime" class="form-control" />
                <span asp-validation-for="PreparationTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="IsOnSale" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <input asp-for="IsOnSale" class="form-control" checked="checked" />
                <span asp-validation-for="IsOnSale" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PieDetailId" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <select asp-for="PieDetailId" id="pieDetailId">
                    <option value="-1">
                        Sin foto...
                    </option>
                    @foreach (var detail in pieDetail.PieDetails.OrderBy(x => x.Name))
                    {
                        if(Model.PieDetailId == detail.PieDetailId)
                        {
                            <option value="@detail.PieDetailId" selected="selected">
                                @detail.Name
                            </option>
                        }
                        else
                        {
                            <option value="@detail.PieDetailId">
                                @detail.Name
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="PieDetailId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        </div>
    </form>
</div>
<div class="container">

    @Html.Partial("~/Views/Shared/OnlineProductsPreview.cshtml", "")
</div>
<script>
    $(document).ready(() => {
        initializeSelector();
    });

    function initializeSelector() {
        $selectize = $('select#pieDetailId').selectize({
            placeholder: "Buscar...",
        });
    };

</script>