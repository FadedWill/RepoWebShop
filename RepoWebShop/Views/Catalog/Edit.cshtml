@model Product

<div class="container">
    <h2>Editando @Model.Name</h2>

    <form asp-controller="Catalog" asp-action="Edit" method="post" class="form-horizontal" role="form">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group" hidden="hidden">
            <label asp-for="ProductId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" hidden="hidden">
            <label asp-for="IsActive" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" maxlength="20" placeholder="" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Category" class="form-control">
                    <option>Lunch</option>
                    <option>Postre</option>
                    <option>Seco</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Temperature" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Temperature" class="form-control">
                    <option>Frío</option>
                    <option>Caliente</option>
                </select>
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MinOrderAmount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MinOrderAmount" class="form-control" />
                <span asp-validation-for="MinOrderAmount" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Portions" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Portions" class="form-control" />
                <span asp-validation-for="Portions" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PreparationTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PreparationTime" class="form-control" />
                <span asp-validation-for="PreparationTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        </div>
    </form>
</div>